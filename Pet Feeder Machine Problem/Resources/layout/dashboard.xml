<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/turquoisebg">

    <ImageView
        android:src="@drawable/dashboardtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="200dp"
        android:maxWidth="250dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView1" />

    <TextView
        android:text="DATA GATHERED BY:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#00CED1"
        android:id="@+id/textView2" />

    <TextView
        android:text="@string/time_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:fontFamily="serif-monospace"
        android:layout_marginBottom="20dp"
        android:id="@+id/timestampTxt" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="Temperature:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:textColor="#FFF"
                android:id="@+id/textView1" />

            <TextView
                android:text="@string/temp_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="#FFB74D"
                android:layout_marginBottom="20dp"
                android:id="@+id/temperatureTxt" />

            <TextView
                android:text="Humidity:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="#FFF"
                android:id="@+id/textView2" />

            <TextView
                android:text="@string/hum_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="#FFB74D"
                android:layout_marginBottom="20dp"
                android:id="@+id/humidityTxt" />

            <TextView
                android:text="Food Quantity:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="#FFF"
                android:id="@+id/textView3" />

            <TextView
                android:text="@string/food_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="#FFB74D"
                android:layout_marginBottom="20dp"
                android:id="@+id/foodTxt" />

            <TextView
                android:text="Water Level:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="#FFF"
                android:id="@+id/textView4" />

            <TextView
                android:text="@string/water_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="#FFB74D"
                android:id="@+id/waterTxt" />

            <Button
                android:text="@string/dispLog_placeholder"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:height="60dp"
                android:id="@+id/btnDispenseLog"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#00CED1" 
                android:textColor="@android:color/white" />
            
            <Button
                android:text="@string/dispense_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:height="60dp"
                android:id="@+id/dispenseBtn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#00CED1" 
                android:textColor="@android:color/white" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
