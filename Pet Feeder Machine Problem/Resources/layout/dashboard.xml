<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/turquoisebg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/dashboardtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="200dp"
                    android:maxWidth="250dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/imageView1" />

                <TextView
                    android:text="DATA GATHERED BY:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#00CED1"
                    android:id="@+id/textView1" />

                <TextView
                    android:text="@string/time_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:fontFamily="serif-monospace"
                    android:id="@+id/timestampTxt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/dashboardBg"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/temphum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/imageView2" />

                <TextView
                    android:text="Check out your pet feeder's \n current surroundings here!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="13dp"
                    android:textColor="#414141"
                    android:id="@+id/textView2" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tableRow1" >

                    <TextView
                        android:text="Temperature:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="#414141"
                        android:id="@+id/textView3" />

                    <TextView
                        android:text="Humidity:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="#414141"
                        android:id="@+id/textView4" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tableRow2" >

                    <TextView
                        android:text="@string/temp_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:textColor="#00CED1"
                        android:id="@+id/temperatureTxt" />

                    <TextView
                        android:text="@string/hum_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:textColor="#00CED1"
                        android:id="@+id/humidityTxt" />

                </TableRow>

                <ImageView
                    android:src="@drawable/foodwater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:layout_marginTop="30dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/imageView3" />

                <TextView
                    android:text="Check out the amount of food \n and water left here!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="13dp"
                    android:textColor="#414141"
                    android:id="@+id/textView5" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tableRow3" >

                    <TextView
                        android:text="Food Quantity:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="#414141"
                        android:id="@+id/textView6" />

                    <TextView
                        android:text="Water Level:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="#414141"
                        android:id="@+id/textView7" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/tableRow4" >

                    <TextView
                        android:text="@string/food_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:textColor="#FFB74D"
                        android:id="@+id/foodTxt" />

                    <TextView
                        android:text="@string/water_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:textColor="#FFB74D"
                        android:id="@+id/waterTxt" /> 

                </TableRow>

            </LinearLayout>

            <Button
                android:text="@string/dispLog_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/buttonstyle"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18dp"
                android:id="@+id/btnDispenseLog"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/white" />
            
            <Button
                android:text="@string/dispense_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonstyle"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18dp"
                android:id="@+id/dispenseBtn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/white"/> 

            <Button
                android:text="ADD DISPENSE SLOT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonstyle"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18dp"
                android:id="@+id/btnAddSlot"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:textColor="@android:color/white"/> 
            
        </LinearLayout>
    </ScrollView>
</FrameLayout>
