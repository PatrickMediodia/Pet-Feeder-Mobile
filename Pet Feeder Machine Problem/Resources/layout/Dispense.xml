<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/turquoisebg">

     <ImageView
        android:src="@drawable/manualDispenserTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="200dp"
        android:maxWidth="250dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView1" />
     
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                    android:text="Number of Servings:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="inherit"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:textColor="#FFF"
                    android:id="@+id/numServingsLbl" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:boxBackgroundColor="#ffffff"
                app:boxStrokeColor="#00CED1">

                <EditText
                    android:id="@+id/editServings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_height="45dp"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:text="Current Time and Date:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="inherit"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#FFF"
                android:id="@+id/dateTimeLbl" />
             <TextView
                android:text="@string/time_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:fontFamily="serif-monospace"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/timestampTxt" />
            <Button
                android:text="@string/dispense_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:height="60dp"
                android:id="@+id/dispenseBtn"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#00CED1" 
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </ScrollView>

    
</LinearLayout>
